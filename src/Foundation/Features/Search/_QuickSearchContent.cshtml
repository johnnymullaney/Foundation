@using Foundation.Features.Search
@using Foundation.Features.Search.Search

@model SearchViewModel<SearchResultPage>

@{
    Layout = null;
}

@if (Model != null && Model.ContentSearchResult != null && Model.ContentSearchResult.ProductHits != null && Model.ContentSearchResult.ProductHits.Any())
{
    <ul class="style-list-none">
        <li class="searchbox__heading">
            <b>Contents</b>
        </li>
        @foreach (var content in Model.ContentSearchResult.ProductHits)
        {

            <li class="searchbox__row">
                <a href="@Url.ContentUrl(content.ContentLink)" class="searchbox__product-name">
                    @Html.Raw(content.Description)
                </a>
            </li>
        }
    </ul>
}
else
{
    <ul class="style-list-none">
        <li class="searchbox__row searchbox__heading">
            <b>Contents</b>
        </li>
        <li class="searchbox__row">
            <p class="searchbox__notfound">No result found.</p>
        </li>
    </ul>
}